generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum IncomeChannel {
  DELIVERY
  LOCAL
}

enum ExpenseType {
  SUPPLIER
  SUPPLIER_PAYMENT
  SALARY
  OTHER
}

enum SupplierCategory {
  MEAT
  VEGETABLES
  PACKAGING
  OTHER
}

enum SupplierTransactionType {
  RACUN
  UPLATA
  KOREKCIJA
}

enum UserRole {
  admin
  staff
}

model Account {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique
  createdAt DateTime  @default(now())
  users     User[]
  suppliers Supplier[]
  incomes   Income[]
  expenses  Expense[]
  supplierTransactions SupplierTransaction[]
  receipts  Receipt[]
  settings  Settings[]
}

model User {
  id           Int      @id @default(autoincrement())
  accountId    Int
  username     String   @unique
  passwordHash String
  role         UserRole @default(admin)
  createdAt    DateTime @default(now())
  account      Account  @relation(fields: [accountId], references: [id])

  @@index([accountId])
}

model Supplier {
  id         Int              @id @default(autoincrement())
  accountId  Int
  number     Int
  name       String?
  category   SupplierCategory @default(OTHER)
  pdvPercent Decimal?
  openingBalance Decimal      @default(0)
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt
  expenses   Expense[]
  transactions SupplierTransaction[]
  account    Account          @relation(fields: [accountId], references: [id])

  @@index([accountId])
}

model Income {
  id               Int           @id @default(autoincrement())
  accountId        Int
  date             DateTime
  amount           Decimal
  channel          IncomeChannel
  feePercentApplied Decimal      @map("feePercent")
  feeAmount        Decimal       @default(0)
  netAmount        Decimal       @default(0)
  note             String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  account          Account       @relation(fields: [accountId], references: [id])

  @@map("Revenue")
  @@index([accountId])
}

model Expense {
  id          Int         @id @default(autoincrement())
  accountId   Int
  date        DateTime
  grossAmount Decimal     @map("amount")
  contributionsAmount Decimal @default(0)
  netAmount   Decimal     @default(0)
  pdvPercent  Decimal     @default(0)
  pdvAmount   Decimal     @default(0)
  type        ExpenseType @default(SUPPLIER)
  supplierId  Int?
  note        String?
  paidNow     Boolean     @default(false)
  receiptId   Int?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  supplier    Supplier?   @relation(fields: [supplierId], references: [id])
  receipt     Receipt?    @relation(fields: [receiptId], references: [id])
  account     Account     @relation(fields: [accountId], references: [id])

  @@index([accountId])
}

model Receipt {
  id          Int       @id @default(autoincrement())
  accountId   Int
  fileName    String
  mimeType    String
  size        Int
  storagePath String
  createdAt   DateTime  @default(now())
  expenses    Expense[]
  account     Account   @relation(fields: [accountId], references: [id])

  @@index([accountId])
}

model Settings {
  id                Int      @id @default(autoincrement())
  accountId         Int
  startingBalance   Decimal  @map("openingBalance")
  defaultPdvPercent Decimal  @default(0)
  deliveryFeePercent Decimal @map("defaultDeliveryFeePercent")
  currency          String   @default("RSD")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  account           Account  @relation(fields: [accountId], references: [id])

  @@unique([accountId])
}

model SupplierTransaction {
  id            Int                     @id @default(autoincrement())
  accountId     Int
  supplierId    Int
  type          SupplierTransactionType
  amount        Decimal
  vatRate       Decimal?
  description   String
  invoiceNumber String?
  date          DateTime
  createdAt     DateTime                @default(now())
  supplier      Supplier                @relation(fields: [supplierId], references: [id])
  account       Account                 @relation(fields: [accountId], references: [id])

  @@index([accountId])
  @@index([supplierId])
}
